<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/txt_expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Teste"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_margin="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Teste"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clean"
            style="@style/Operator_Button"
            android:text="C"
            android:textColor="@color/red"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_parent"
            style="@style/Operator_Button"
            android:text="()"
            android:textColor="@color/yellow"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_percent"
            style="@style/Operator_Button"
            android:text="%"
            android:textColor="@color/yellow"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_division"
            style="@style/Operator_Button"
            android:text="/"
            android:textColor="@color/yellow"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_7"
            style="@style/Number_Button"
            android:text="7"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_8"
            style="@style/Number_Button"
            android:text="8"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_9"
            style="@style/Number_Button"
            android:text="9"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_x"
            style="@style/Operator_Button"
            android:text="x"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_4"
            style="@style/Number_Button"
            android:text="4"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_5"
            style="@style/Number_Button"
            android:text="5"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_6"
            style="@style/Number_Button"
            android:text="6"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_minus"
            style="@style/Operator_Button"
            android:text="-"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_1"
            style="@style/Number_Button"
            android:text="1"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_2"
            style="@style/Number_Button"
            android:text="2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_3"
            style="@style/Number_Button"
            android:text="3"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_plus"
            style="@style/Operator_Button"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dot"
            style="@style/Number_Button"
            android:text="."

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_0"
            style="@style/Number_Button"
            android:text="0"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comma"
            style="@style/Number_Button"
            android:text=","

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_equal"
            style="@style/Operator_Button"
            android:text="="
            />
    </LinearLayout>


</LinearLayout>
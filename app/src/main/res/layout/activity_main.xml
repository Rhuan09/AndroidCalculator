<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expression"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text="Teste"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="Teste"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/panda"
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/panda">

        </ImageView>

        <ImageView
            android:id="@+id/backspace"
            android:layout_width="380dp"
            android:layout_height="25dp"
            android:src="@drawable/backspace"
            android:layout_gravity="bottom"
            android:scaleType="fitEnd"
            android:layout_marginBottom="10dp"
            >

        </ImageView>


    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clean"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="C"
            android:textColor="@color/red" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_parent"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="()"
            android:textColor="@color/yellow" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_percent"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="%"
            android:textColor="@color/yellow" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_division"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="/"
            android:textColor="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_7"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="7"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_8"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_9"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="9"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_x"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_4"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="4"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_5"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_6"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="6"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_minus"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_1"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="1"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_2"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_3"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="3"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_plus"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dot"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="."

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_0"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comma"
            style="@style/Number_Button"
            android:layout_weight="0.8"
            android:text=","

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_equal"
            style="@style/Operator_Button"
            android:layout_weight="0.8"
            android:text="=" />
    </LinearLayout>


</LinearLayout>